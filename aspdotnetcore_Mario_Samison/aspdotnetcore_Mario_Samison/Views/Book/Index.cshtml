@model BookListViewModel

@{
    ViewData["Title"] = "Overzicht boeken";
}

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <td>Title</td>
                    <td>Author</td>
                    <td>Created At</td>
                    <td>ISBN</td>
                    <td>Genre</td>
                    <td>Delete</td>
                </tr>
            </thead>
            @foreach (var book in Model.Books)
            {
                <tr>
                    <td>
                        <a asp-controller="Book" asp-action="Detail" asp-route-id="@book.Id">@book.Title</a>
                    </td>
                    <td>@book.Author</td>
                    <td>@book.CreationDate.ToLongDateString()</td>
                    <td>@book.ISBN</td>
                    <td>@book.Genre</td>
                    <td>
                        <a asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id"
                           onclick="$.post(this.href).success(window.location.href = '/books');return false; ">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>